---
import { getCollection } from "astro:content";

const posts = (await getCollection("posts"))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

function fmt(d) {
  const dt = new Date(d);
  return dt.toLocaleDateString(undefined, { year: "numeric", month: "long", day: "numeric" });
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Blog â€” Clinical Monster Blog</title>
    <style>
      :root{
        --text:#0b0f19;
        --muted:#556070;
        --border:#e7e7ea;
        --max:980px;
        --radius:14px;
      }
      body{
        margin:0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
        color:var(--text);
        line-height:1.6;
        background:#fff;
      }
      a{ color:var(--text); text-decoration:none; }
      a:hover{ text-decoration:underline; }

      .container{
        width:min(var(--max), calc(100% - 48px));
        margin:0 auto;
      }
      header{
        padding:20px 0 10px;
      }
      nav{
        display:flex;
        gap:16px;
        margin-top:10px;
      }
      nav a{ color:var(--muted); }
      nav a:hover{ color:var(--text); }

      h1{
        font-size: 34px;
        line-height: 1.15;
        letter-spacing: -0.03em;
        margin: 20px 0 18px;
      }

      .list{
        display:flex;
        flex-direction:column;
        gap:22px;
        padding: 10px 0 40px;
      }

      .row{
        display:grid;
        grid-template-columns: 220px 1fr;
        gap: 18px;
        align-items:center;
      }

      @media (max-width: 720px){
        .row{ grid-template-columns: 1fr; }
      }

      .thumb{
        width: 100%;
        height: 125px;
        border-radius: var(--radius);
        border: 1px solid var(--border);
        object-fit: cover;
        display:block;
        background:#f5f6f8;
      }

      .meta h2{
        font-size: 20px;
        line-height: 1.2;
        letter-spacing: -0.01em;
        margin: 0 0 8px;
      }

      .excerpt{
        color: var(--muted);
        margin: 0 0 6px;
        max-width: 70ch;
      }

      .date{
        color: var(--muted);
        font-size: 13px;
      }

      .divider{
        border-bottom: 1px solid var(--border);
        margin-top: 18px;
      }
    </style>
  </head>

  <body>
    <header class="container">
      <div style="font-weight:650;">Clinical Monster Blog</div>
      <nav>
        <a href="/">Home</a>
        <a href="/blog">Blog</a>
      </nav>
    </header>

    <main class="container">
      <h1>Blog</h1>

      <div class="list">
        {posts.map((post) => (
          <div>
            <a class="row" href={`/blog/${post.slug}/`}>
              <img
                class="thumb"
                src={post.data.hero_image ?? "/images/uploads/placeholder.png"}
                alt={post.data.title}
                loading="lazy"
              />
              <div class="meta">
                <h2>{post.data.title}</h2>
                {post.data.excerpt ? <p class="excerpt">{post.data.excerpt}</p> : null}
                <div class="date">{fmt(post.data.date)}</div>
              </div>
            </a>
            <div class="divider"></div>
          </div>
        ))}
      </div>
    </main>
  </body>
</html>
